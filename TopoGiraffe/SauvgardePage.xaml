                <Grid Grid.Row="3">
                    <Button Style="{DynamicResource ExporterBtn}" x:Name="Parametres" Foreground="#FFFFFF" Height="40" Background="#0000" BorderBrush="Transparent"
                            BorderThickness="0" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" Margin="0,30,0,15">
                        <StackPanel Orientation="Horizontal" Margin="20,0" HorizontalAlignment="Left">
                            <Image Source="/assets/img/gear.png" Margin="5,9" ></Image>
