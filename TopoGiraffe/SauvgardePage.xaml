                            <Image Source="/assets/img/return.png" Margin="5,9" ></Image>
                            <TextBlock Text="" Margin="10,0" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>       
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,0,-1,0">
                        <Button Style="{DynamicResource AccueuilBtn}" x:Name="accueuil"  Foreground="#FFFFFF" Height="40" Background="#0000" BorderBrush="Transparent"
                            BorderThickness="0" HorizontalContentAlignment="Left" >
                            <StackPanel Orientation="Horizontal" Margin="20,0" HorizontalAlignment="Left">
                                <Image Source="/assets/img/house.png" Margin="5,9" ></Image>
                                <TextBlock Text="Accueuil" Margin="10,0" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource NouveauBtn}"  x:Name="nouveau"  Foreground="#FFFFFF" Height="40" Background="#0000" BorderBrush="Transparent"
                            BorderThickness="0" HorizontalContentAlignment="Left"  >
                            <StackPanel Orientation="Horizontal" Margin="20,0" HorizontalAlignment="Left">
                                <Image Source="/assets/img/page.png" Margin="5,9" ></Image>
                                <TextBlock Text="Nouvelle carte" Margin="10,0" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource OuvrirBtn}" x:Name="ouvrir"  Foreground="#FFFFFF" Height="40" Background="#0000" BorderBrush="Transparent"
                            BorderThickness="0" HorizontalContentAlignment="Left" >
                            <StackPanel Orientation="Horizontal" Margin="20,0" HorizontalAlignment="Left">
                                <Image Source="/assets/img/folder.png" Margin="5,9" ></Image>
                                <TextBlock Text="Ouvrir" Margin="10,0" FontSize="15" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource EnregistrerBtn}" x:Name="enregistrer" Foreground="#FFFFFF" Height="40" Background="#0000" BorderBrush="Transparent"
                            BorderThickness="0" HorizontalContentAlignment="Left" >
                            <StackPanel Orientation="Horizontal" Margin="20,0" HorizontalAlignment="Left">
                                <Image Source="/assets/img/download.png" Margin="5,9" ></Image>
                                <TextBlock Text="Enregistrer" Margin="10,0" FontSize="15" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource EnregistrerSousBtn}" x:Name="enregistrerSous" Foreground="#FFFFFF" Height="40" Background="#0000" BorderBrush="Transparent"
                            BorderThickness="0" HorizontalContentAlignment="Left" Click="enregistrerSous_Click" Cursor="Hand" >
                            <StackPanel Orientation="Horizontal" Margin="20,0" HorizontalAlignment="Left">
                                <Image Source="/assets/img/save.png" Margin="5,8" ></Image>
